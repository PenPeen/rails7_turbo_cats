<%= turbo_frame_tag cat do %>
  <%# turbo:submit-end（Turboのsubmit後）イベント発火時、modal#close実行 %>
  <%= bootstrap_form_with model: cat, data: { action: "turbo:submit-end->modal#close" } do |form| %>
    <%= form.text_field :name %>
    <%= form.number_field :age %>
    <%= form.primary %>
  <% end%>
<% end %>
